<Window x:Class="WPF_futti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Spiel" Height="600" Width="800"
        Background="#1E1E2E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header mit Score -->
        <Border Grid.Row="0" Background="#313244" Padding="20" Margin="20,20,20,10">
            <Grid>
                <TextBlock Text="⚽ Fußball Quiz" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#89B4FA"
                          HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="ScoreLabel" 
                              Text="Punkte: 0" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#A6E3A1"
                              Margin="0,0,20,0"/>
                    <TextBlock x:Name="QuestionCounter" 
                              Text="Frage 1/10" 
                              FontSize="24" 
                              Foreground="#CDD6F4"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Frage und Antworten -->
        <Border Grid.Row="1" Background="#313244" Padding="30" Margin="20,10">
            <StackPanel>
                <!-- Frage -->
                <TextBlock x:Name="QuestionText" 
                          Text="Frage wird geladen..." 
                          FontSize="26" 
                          FontWeight="SemiBold" 
                          Foreground="#CDD6F4"
                          TextWrapping="Wrap"
                          Margin="0,0,0,30"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"/>

                <!-- Antwort Buttons -->
                <Button x:Name="Answer1" 
                       Content="Antwort 1" 
                       Click="Answer_Click"
                       Height="70" 
                       Margin="0,0,0,15"
                       FontSize="20"
                       Background="#45475A"
                       Foreground="#CDD6F4"
                       BorderThickness="0"
                       Cursor="Hand"/>

                <Button x:Name="Answer2" 
                       Content="Antwort 2" 
                       Click="Answer_Click"
                       Height="70" 
                       Margin="0,0,0,15"
                       FontSize="20"
                       Background="#45475A"
                       Foreground="#CDD6F4"
                       BorderThickness="0"
                       Cursor="Hand"/>

                <Button x:Name="Answer3" 
                       Content="Antwort 3" 
                       Click="Answer_Click"
                       Height="70" 
                       Margin="0,0,0,15"
                       FontSize="20"
                       Background="#45475A"
                       Foreground="#CDD6F4"
                       BorderThickness="0"
                       Cursor="Hand"/>

                <Button x:Name="Answer4" 
                       Content="Antwort 4" 
                       Click="Answer_Click"
                       Height="70"
                       FontSize="20"
                       Background="#45475A"
                       Foreground="#CDD6F4"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Feedback und Weiter Button -->
        <Border Grid.Row="2" Background="#313244" Padding="20" Margin="20,10,20,20">
            <Grid>
                <TextBlock x:Name="FeedbackText" 
                          Text="" 
                          FontSize="22" 
                          FontWeight="Bold"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"/>

                <Button x:Name="NextButton" 
                       Content="Nächste Frage ►" 
                       Click="NextButton_Click"
                       Width="200" 
                       Height="50"
                       FontSize="18"
                       FontWeight="Bold"
                       Background="#89B4FA"
                       Foreground="#1E1E2E"
                       BorderThickness="0"
                       HorizontalAlignment="Right"
                       Visibility="Collapsed"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Game Over Overlay -->
        <Grid x:Name="GameOverPanel" 
              Grid.RowSpan="3" 
              Background="#CC1E1E2E" 
              Visibility="Collapsed">
            <Border Background="#313244" 
                   Width="500" 
                   Height="300" 
                   CornerRadius="10"
                   Padding="40">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="🎉 Quiz Beendet!" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="#89B4FA"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <TextBlock x:Name="FinalScore" 
                              Text="Deine Punktzahl: 0/10" 
                              FontSize="28" 
                              Foreground="#CDD6F4"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <Button Content="Nochmal Spielen" 
                           Click="RestartButton_Click"
                           Width="250" 
                           Height="60"
                           FontSize="22"
                           FontWeight="Bold"
                           Background="#A6E3A1"
                           Foreground="#1E1E2E"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>